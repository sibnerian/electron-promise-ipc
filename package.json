{
  "name": "electron-promise-ipc",
  "version": "2.2.4",
  "description": "Run IPC calls with a promise API.",
  "scripts": {
    "pretest": "if [ 'v6' = $(node --version | cut -c -2) ] ; then echo 'Skipping lint for node v6' ; else npm run --silent lint; fi && npm run build",
    "coverage": "nyc mocha",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test": "cross-env NODE_ENV=test npm run coverage",
    "lint": "eslint . --ext=.ts,.js",
    "build": "mkdirp build && tsc && babel src --out-dir build --source-maps",
    "prepublishOnly": "npm run build",
    "clean": "rimraf build"
  },
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sibnerian/electron-promise-ipc.git"
  },
  "author": "Ian Sibner <sibnerian@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "electron": ">= 9.1.2"
  },
  "dependencies": {
    "is-electron-renderer": "^2.0.1",
    "object.entries": "^1.1.3",
    "serialize-error": "^5.0.0",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/register": "^7.12.1",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/lolex": "^3.1.1",
    "@types/mocha": "^5.2.7",
    "@types/serialize-error": "^4.0.1",
    "@types/uuid": "^3.4.9",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "babel-plugin-istanbul": "^5.1.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.1.0",
    "cross-env": "^5.2.0",
    "electron": "^15.5.5",
    "electron-ipc-mock": "^0.0.3",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "lolex": "^1.6.0",
    "mkdirp": "^0.5.1",
    "mocha": "^8.2.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "proxyquire": "2.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.5",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "directories": {
    "test": "test"
  },
  "keywords": [
    "electron",
    "promise",
    "ipc"
  ]
}
