{
  "name": "electron-promise-ipc",
  "version": "0.1.3",
  "description": "Run IPC calls with a promise API.",
  "scripts": {
    "pretest": "npm run --silent lint && npm run build",
    "coverage": "nyc mocha",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "test": "npm run coverage",
    "lint": "eslint .",
    "build": "mkdirp build && babel src --out-dir build --source-maps",
    "prepublish": "npm run build",
    "clean": "rimraf build"
  },
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sibnerian/electron-promise-ipc.git"
  },
  "author": "Ian Sibner <sibnerian@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "electron": "^1.4.15"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "is-electron-renderer": "^2.0.1",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-airbnb": "^2.2.3",
    "babel-preset-env": "^1.7.0",
    "chai-as-promised": "^6.0.0",
    "chai": "^3.5.0",
    "coveralls": "^3.0.2",
    "electron-ipc-mock": "^0.0.2",
    "electron": "^1.4.15",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "eslint": "^3.15.0",
    "lolex": "^1.5.2",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "proxyquire": "^1.7.11",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.7"
  },
  "nyc": {
    "exclude": [
      "test",
      "build"
    ]
  },
  "directories": {
    "test": "test"
  },
  "keywords": [
    "electron",
    "promise",
    "ipc"
  ]
}
